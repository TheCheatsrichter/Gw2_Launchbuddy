                            </Grid>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50*"/>
                                    <ColumnDefinition Width="50*"/>
                                </Grid.ColumnDefinitions>
                                <Button Content="Set Loginwindow Image" Grid.Column="1" x:Name="bt_setloginwindow" Click="bt_setloginwindow_Click" MaxWidth="200" ToolTip="Change the appeareance of the loginwindow frame &#x0a;in cinemamode." HorizontalAlignment="Center" Height="30"/>
                                <Label x:Name="lab_loginwindowpath"  Grid.Column="0" Content="Current Loginwindow: Default" FontWeight="Bold" VerticalAlignment="Center"/>
                            </Grid>
                            <Separator Margin="0,5,0,0"/>
                        </StackPanel>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="4" Margin="5">
                            <StackPanel x:Name="Slideshow" >
                                <Expander >
                                    <Expander.Header>
                                        <Label Content="Imagefolder" Style="{StaticResource H2}"/>
                                    </Expander.Header>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50*"/>
                                            <ColumnDefinition Width="50*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="50*" MaxHeight="300"/>
                                            <RowDefinition Height="30"/>
                                        </Grid.RowDefinitions>
                                        <Label Content="Imagefolder:" Style="{StaticResource H3}"/>

                                        <Image x:Name="img_imagepreview" Grid.Row="1" Grid.Column="1" Source="Resources/noimg.png" MaxHeight="300"/>
                                        <Grid Margin="0,5" Grid.Row="1">
                                            <ListView x:Name="lv_cinema_images" Grid.Row="1" MaxHeight="300"  SelectionChanged="lv_cinema_images_SelectionChanged">
                                                <ListView.View>
                                                    <GridView>
                                                        <GridViewColumn HeaderStringFormat="" Width="150" DisplayMemberBinding="{Binding Name}">
                                                            <GridViewColumnHeader Tag="Name" Content="Image Name"/>
                                                        </GridViewColumn>
                                                        <GridViewColumn HeaderStringFormat=""  DisplayMemberBinding="{Binding Path}">
                                                            <GridViewColumnHeader Tag="Path" Content="Path"/>
                                                        </GridViewColumn>
                                                    </GridView>
                                                </ListView.View>
                                            </ListView>
                                        </Grid>
                                        <Button Content="Set Imagefolder" x:Name="bt_cinema_setimagefolder" Grid.Row="2" Grid.Column="0" Click="bt_cinema_setimagefolder_Click" ToolTip="Choose the folder where your pictures for the slidshow should be imported from" />

                                        <Label x:Name="lab_imagepreview" Content="Current Image: -" Grid.Row="2" Grid.Column="1" FontWeight="Bold"/>
                                    </Grid>
                                </Expander>
                                <Expander>
                                    <Expander.Header>
                                        <Label Content="Music" Style="{StaticResource H2}"/>
                                    </Expander.Header>
                                    <DockPanel>
                                        <Label x:Name="lab_musicpath" Content="Current Music file: -" FontWeight="Bold" ToolTip="The path to your currently selected music file." DockPanel.Dock="Top"/>
                                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
                                            <Button x:Name="bt_setmusic" Content="Set Music" Grid.Column="0" Click="bt_setmusic_Click" VerticalAlignment="Center" Height="30" ToolTip="Choose the music for slideshow mode." Width="100"/>
                                            <Button x:Name="bt_musicstart" Content="Test Music" Click="bt_musicstart_Click" Margin="5,0" Width="100"/>
                                            <Button x:Name="bt_musicstop" Content="Stop Music" Click="bt_musicstop_Click" Margin="5,0" Width="100"/>
                                        </StackPanel>
                                    </DockPanel>
                                </Expander>
                                <Expander>
                                    <Expander.Header>
                                        <Label Content="Animation" Style="{StaticResource H2}"/>
                                    </Expander.Header>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50*"/>
                                            <ColumnDefinition Width="50*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                        </Grid.RowDefinitions>
                                        <Label Content="Image EndPosition Horizontal:" FontWeight="Bold"/>
                                        <Slider x:Name="sl_logoendpos" Grid.Column="1" Maximum="100" Minimum="-100" Value="30" ValueChanged="sl_logoendpos_ValueChanged" Thumb.DragCompleted="sl_logoendpos_DragCompleted" ToolTip="Configure the endposition (lower=left,higher=right) of the images."/>

                                        <Label x:Name="lab_endscaleX" Content="Image EndScale:" FontWeight="Bold" Grid.Row="1"/>
                                        <Slider x:Name="sl_logoendscaleX" Grid.Column="1" Grid.Row="1" Value="30" ValueChanged="sl_logoendscaleX_ValueChanged" Thumb.DragCompleted="sl_logoendscaleX_DragCompleted" Maximum="5" Minimum="0.2" LargeChange="0.1" ToolTip="Configure the scale/size of the pictures during the slideshow."/>
                                    </Grid>
                                </Expander>
                                <Expander>
                                    <Expander.Header>
                                        <Label Content="Mask" Style="{StaticResource H2}"/>
                                    </Expander.Header>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50*"/>
                                            <ColumnDefinition Width="50*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="100*"/>
                                            <RowDefinition Height="30"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0" x:Name="tb_maskinfo" TextWrapping="Wrap" FontSize="14.667">
                                        Instructions:
                                        <LineBreak />
                                        Set the Maskimage by using a png image with transparent background. Draw the logo/ image with any choosen color, the alpha channel however determines which part of the mask will be visible! Press Set MaskImage and check in the Preview if the mask is imported correctly
                                        </TextBlock>
                                        <Button Content="Set Maskimage" x:Name="bt_cinema_setmask" Grid.Row="1" Click="bt_cinema_setmask_Click" ToolTip="Your current used masked for the slideshow pictures."/>
                                        <Label x:Name="lab_maskpreview" Content="Current Mask: Default" Grid.Row="1" Grid.Column="1" FontWeight="Bold"/>
                                        <Image x:Name="img_maskpreview" Grid.Row="0" Grid.Column="1" Source="Resources/logo_hq_mask.png" MaxHeight="180"/>
                                    </Grid>
                                </Expander>
                            </StackPanel>
                        </ScrollViewer>
                        <StackPanel x:Name="Videomode" Visibility="Collapsed" IsEnabled="True" Grid.Row="4" Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50*"/>
                                    <ColumnDefinition Width="50*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="200*"/>
                                    <RowDefinition Height="30"/>
                                </Grid.RowDefinitions>

                                <StackPanel>
                                    <Label Content="Videomode Info:" FontSize="16" FontWeight="Bold"/>
                                    <Label x:Name="lab_videoname" Content="Videoname:"/>
                                    <Label x:Name="lab_videopath" Content="Path:"/>
                                    <Label x:Name="lab_videoresolution" Content="Resolution:"/>
                                    <Label x:Name="lab_videoformat" Content="Format:"/>
                                    <Label x:Name="lab_videolength" Content="Length:"/>
                                </StackPanel>
                                <MediaElement x:Name="cinema_videoplayback" Grid.Row="0" Grid.Column="1" Margin="5,0" LoadedBehavior="Manual" UnloadedBehavior="Manual" Loaded="cinema_videoplayback_Loaded" MediaOpened="cinema_videoplayback_MediaOpened"/>

                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50*"/>
                                        <ColumnDefinition Width="50*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="bt_cinema_videoplay" Content="&gt;" Grid.Row="0" Grid.Column="0"  Margin="5,0"  Click="bt_cinema_videoplay_Click"/>
                                    <Button x:Name="bt_cinema_videostop" Content="Stop" Grid.Row="0" Grid.Column="1"  Margin="5,0" BorderThickness="5" Click="bt_cinema_videostop_Click"/>
                                </Grid>
                                <Button x:Name="bt_cinema_setvideo" Content="Set Video" Grid.Row="1" Margin="5,0" Click="bt_cinema_setvideo_Click" ToolTip="Choose the videofile used for video mode.&#x0a;This video will be played in the background."/>
                            </Grid>

                        </StackPanel>
                    </Grid>

                </TabItem>

                <TabItem x:Name="tab_clientfix">
                    <TabItem.Header>
                        <StackPanel>
                            <Image Height="20" Source="Resources/Icons/crashfix.png"/>
                            <Label FontSize="10" Margin="0,-5,0,-7">Crashes</Label>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50*"/>
                            <RowDefinition Height="25*"/>
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50*"/>
                                <ColumnDefinition Width="50*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="100*"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <Button Content="Fix" Grid.Column="1" Grid.Row="2" IsEnabled="False" x:Name="bt_fixcrash" FontSize="14" FontWeight="Bold" ToolTip="Try to fix the currently selected crash." Click="bt_fixcrash_Click"/>
                            <Label Content="Latest Crashes" x:Name="lb_lastcrashes" Style="{StaticResource H2}"/>
                            <Label Content="Info" Grid.Column="1" Style="{StaticResource H2}"/>
                            <ListView x:Name="lv_crashlogs" DisplayMemberPath="{Binding Crashlog}" Grid.Row="1" Grid.RowSpan="2" FontWeight="Bold" SelectionChanged="lv_crashlogs_SelectionChanged">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="CrashType" Width="100" DisplayMemberBinding="{Binding Solutionkey}"/>
                                        <GridViewColumn Header="CrashTime" Width="130" DisplayMemberBinding="{Binding CrashTime}"/>
                                        <GridViewColumn Header="Build" Width="100" DisplayMemberBinding="{Binding Build}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <ScrollViewer Grid.Column="1" Grid.Row="1">
                                <TextBlock  Margin="5" x:Name="tblock_crashinfo" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
                            </ScrollViewer>

                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30*"/>
                                <ColumnDefinition Width="70*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Clientifix the Quaggan" Style="{StaticResource H2}"/>
                            <Image  MaxHeight="150" Source="Resources/clientifix.png" ToolTip="A quaggan who wants to help youuuuu."/>
                            <Grid Grid.Column="1" Margin="20">
                                <Image  Source="Resources/opacitymask.png" Stretch="Fill"/>
                                <TextBlock  Text="Coooo! Quaggan will do the best to help you!" Foreground="White" Margin="15" x:Name="tblock_crashsolutioninfo" TextWrapping="Wrap" FontSize="14"/>
                            </Grid>

                        </Grid>
                        <Button ToolTip="Fix and observe your latest game crashes by selecting them in the list" Grid.Row="0" ToolTipService.InitialShowDelay="0" ToolTipService.ShowDuration="100000" Grid.Column="99" VerticalAlignment="Top" HorizontalAlignment="Right" Height="20" Width="20" Content="?"   FontWeight="Bold"></Button>
                    </Grid>

                </TabItem>

                <TabItem>
                    <TabItem.Header>
                        <StackPanel>
                            <Image Height="20" Source="Resources/Icons/tools.png"/>
                            <Label FontSize="10" Margin="0,-5,0,-7">LB Settings</Label>
                        </StackPanel>
                    </TabItem.Header>
                    <StackPanel>

                        <Label Content="Launchbuddy Settings" Style="{StaticResource H1}"/>
                        <Button ToolTip="All non gw2 client relative settings for Launchbuddy only" Grid.Row="0" ToolTipService.InitialShowDelay="0" ToolTipService.ShowDuration="100000" Grid.Column="99" VerticalAlignment="Top" HorizontalAlignment="Right" Height="20" Width="20" Content="?"  FontWeight="Bold" Margin="-20,-30,0,0"></Button>

                        <!-- Content="Settings" FontWeight="Bold" FontSize="14"/>
                        <StackPanel Margin="5">
                            <CheckBox Content="Use Graphical Gameinstance Manager" />
                            <CheckBox Content="Search for new versions of Launchbuddy on Start"/>
                        </StackPanel>
                        
                        <Separator Margin="5"/>
                        -->
                        <Separator Margin="3"/>
                        <CheckBox x:Name="cb_lbupdatescheck" Content="Automatically Check for Launchbuddy Updates" Margin="5" Click="cb_lbupdatescheck_Click" ToolTip="Choose if Launchbuddy should automatically search for updates on startup."/>
                        <CheckBox x:Name="cb_useinstancegui" Content="Use Game Instance GUI" Margin="5" Click="cb_useinstancegui_Click" ToolTip="Choose if the instance manager should be launched whenever you launch gw2." Checked="cb_useinstancegui_Checked"/>
                        <CheckBox x:Name="cb_autoupdatedatfiles" Content="Automatically update .dat files" Margin="5" Click="cb_autoupdatedatfiles_Click" ToolTip="Choose if your .dat files should be automatically updated at launch when a new patch has been released." Checked="cb_autoupdatedatfiles_Checked"/>

                        <Label Content="Launchbuddy Releases" Style="{StaticResource H2}"/>
                        <Grid Height="250" Margin="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60*"/>
                                <ColumnDefinition Width="40*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="150*"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <Label Content="Description:" Grid.Row="0" Grid.Column="1" Style="{StaticResource H2}"/>
                            <ListView x:Name="lv_lbversions" Grid.Row="0" Grid.RowSpan="2" SelectionChanged="ListView_SelectionChanged" IsSynchronizedWithCurrentItem="True">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Name" Width="265" DisplayMemberBinding="{Binding Name}"/>
                                        <GridViewColumn Header="Version" Width="100" DisplayMemberBinding="{Binding Version}"/>
                                        <GridViewColumn Header="Releasedate" Width="100" DisplayMemberBinding="{Binding Date}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <WebBrowser x:Name="wb_releasedescr" Grid.Row="1" Grid.Column="1" Margin="3,0,0,0" />
                            <DockPanel  Grid.Row="2" Grid.ColumnSpan="2" LastChildFill="False">
                                <Button x:Name="bt_fetchlbversions" Margin="3" Content="Check for Updates" DockPanel.Dock="Left" Click="bt_fetchlbversions_Click" ToolTip="Check for Gw2 Launchbuddy updates."/>
                                <Button x:Name="bt_downloadrelease" Margin="3" Content="Download" Click="bt_downloadrelease_Click" IsEnabled="False" DockPanel.Dock="Left" ToolTip="Download the selected Launchbuddy version." MinWidth="80" MaxWidth="130"/>
                            </DockPanel>

                        </Grid>
                        <Separator Margin="-3,15,0,10"/>
                        <StackPanel>
                            <Label Content="Bug Report:" Style="{StaticResource H2}"></Label>
                            <Button x:Name="bt_bugreport" Content="Report a Bug"  Click="bt_bugreport_Click" Height="30" MaxWidth="250" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                            <Label Content="Settings:" Style="{StaticResource H2}"></Label>
                            <Button x:Name="bt_resetpropertysettings" Content="Reset ALL LB Settings"  Height="30" MaxWidth="250" HorizontalAlignment="Left" Margin="10,0,0,0" Click="Bt_resetpropertysettings_Click"/>
                            <Button x:Name="bt_resetinstanceguisettings" Content="Reset Game Instance Manager Settings"  Height="30" MaxWidth="250" HorizontalAlignment="Left" Margin="10,0,0,0" Click="Bt_resetinstanceguisettings_Click"/>
                        </StackPanel>
                    </StackPanel>
                </TabItem>
                <TabItem Visibility="Hidden" Height="10"/>
            </TabControl>
        </Grid>
    </Grid>
</Window>


