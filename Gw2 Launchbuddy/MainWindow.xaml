                            <Button x:Name="bt_settacopath" Content="Set TacO Path" Width="100" Height="30" Click="bt_settacopath_Click"/>
                            <TextBox IsEnabled="False" MinWidth="450" x:Name="tb_tacopath"/>
                        </DockPanel>
                    </StackPanel>
                </TabItem>
                <!-- END DELETE ON 1.9 -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel>
                            <Image Height="20" Source="Resources/Icons/film.png"/>
                            <Label FontSize="10" Margin="0,-5,0,-7">Cinema Mode</Label>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="90"/>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="30*"/>
                        </Grid.RowDefinitions>
                        <Label Content="Cinema Mode (Changes may require restart): " Grid.Row="0" Style="{StaticResource H1}"/>
                        <Button ToolTip="Create a custom launcher UI with an animated slideshow or video background" Grid.Row="0" ToolTipService.InitialShowDelay="0" ToolTipService.ShowDuration="100000" Grid.Column="99" VerticalAlignment="Top" HorizontalAlignment="Right" Height="20" Width="20" Content="?"   FontWeight="Bold"></Button>
                        <DockPanel Margin="0,5,0,0" Grid.Row="2">
                            <RadioButton x:Name="rb_cinemaslideshowmode" Content="Slideshow Mode" DockPanel.Dock="Left" Checked="rb_slideshowmode" IsChecked="True" FontWeight="Bold" FontSize="14" ToolTip="Use the slideshow version of the cinemamode." HorizontalAlignment="Center" VerticalAlignment="Center" />
                            <RadioButton x:Name="rb_cinemavideomode" Content="Video Mode" DockPanel.Dock="Left" Checked="rb_videomode" Margin="5,0,0,0" FontSize="14" FontWeight="Bold" ToolTip="Use the video mode of cinemamode" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </DockPanel >
                        <StackPanel Grid.Row="1" Margin="0,3">
                            <Separator/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50*"/>
                                    <ColumnDefinition Width="50*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="32"/>
                                </Grid.RowDefinitions>
                                <Label Content="Background Color:" FontWeight="Bold" ToolTip="Change the default background color for cinemamode."/>
