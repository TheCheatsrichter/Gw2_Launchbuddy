<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gw2_Launchbuddy"
        xmlns:System="clr-namespace:System;assembly=mscorlib" xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero" x:Class="Gw2_Launchbuddy.MainWindow"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:properties="clr-namespace:Gw2_Launchbuddy.Properties"
        x:Name="myWindow"
        ShowInTaskbar="true"

    
        mc:Ignorable="d" LostKeyboardFocus="Window_LostKeyboardFocus" GotKeyboardFocus="Window_GotKeyboardFocus"
        Title="Gw2 Launchbuddy V 2.3" MinHeight="700" MinWidth="900" Height="700" Width="800" Icon="launchbuddy.ico" Closing="Window_Closing" MouseLeftButtonDown="myWindow_MouseLeftButtonDown_1" ResizeMode="CanResizeWithGrip" WindowStyle="None">
    <Window.Resources>
        <Storyboard x:Key="anim_imgfadeout">
            <DoubleAnimation 
        		Storyboard.TargetName="img_slideshow"
        		Storyboard.TargetProperty="Opacity"
        		From ="1" To="0" Duration="0:0:1"
                        />
        </Storyboard>
        <Storyboard x:Key="anim_imgfadein">
            <DoubleAnimation 
        		Storyboard.TargetName="img_slideshow"
        		Storyboard.TargetProperty="Opacity"
        		From ="0" To="1" Duration="0:0:1"
                        />
        </Storyboard>

        <EasingDoubleKeyFrame x:Key="Mask_EndPos" KeyTime="0:0:4.9" Value="800">
            <EasingDoubleKeyFrame.EasingFunction>
                <CubicEase EasingMode="EaseInOut"/>
            </EasingDoubleKeyFrame.EasingFunction>
        </EasingDoubleKeyFrame>

        <EasingDoubleKeyFrame x:Key="Mask_EndScaleX" KeyTime="0:0:4.9" Value="1.205">
            <EasingDoubleKeyFrame.EasingFunction>
                <CubicEase EasingMode="EaseInOut"/>
            </EasingDoubleKeyFrame.EasingFunction>
        </EasingDoubleKeyFrame>

        <Storyboard x:Key="anim_slideshow_start">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" Storyboard.TargetName="img_slideshow">
                <EasingDoubleKeyFrame KeyTime="0" Value="0.678"/>
                <EasingDoubleKeyFrame KeyTime="0:0:4" Value="0.818"/>
                <StaticResource ResourceKey="Mask_EndScaleX"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="img_slideshow">
                <EasingDoubleKeyFrame KeyTime="0" Value="-19.714"/>
                <EasingDoubleKeyFrame KeyTime="0:0:4" Value="-20.386"/>
                <StaticResource ResourceKey="Mask_EndPos" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" Storyboard.TargetName="img_slideshow">
                <EasingDoubleKeyFrame KeyTime="0" Value="0.677"/>
                <EasingDoubleKeyFrame KeyTime="0:0:4" Value="0.816"/>
                <StaticResource ResourceKey="Mask_EndScaleX"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="img_slideshow">
                <EasingDoubleKeyFrame KeyTime="0" Value="17.459"/>
                <EasingDoubleKeyFrame KeyTime="0:0:4" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:4.9" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <SolidColorBrush x:Key="ListBorder" Color="#828790"/>


        <Style x:Key="Style_lvacc" TargetType="{x:Type ListView}">

            <Setter Property="Background" Value="#4CFFFFFF"/>
            <Setter Property="TextElement.Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="Gainsboro"/>
            <Setter Property="ScrollViewer.Foreground" Value="White"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="true"/>
            <Setter Property="ScrollViewer.PanningMode" Value="Both"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListView}">
                        <Themes:ListBoxChrome x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" RenderMouseOver="False" RenderFocused="False" SnapsToDevicePixels="true">
                            <ScrollViewer Padding="{TemplateBinding Padding}" Style="{DynamicResource {x:Static GridView.GridViewScrollViewerStyleKey}}" Foreground="Black">
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                </ItemsPresenter>
                            </ScrollViewer>
                        </Themes:ListBoxChrome>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsGrouping" Value="true"/>
                                    <Condition Property="VirtualizingPanel.IsVirtualizingWhenGrouping" Value="false"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="lv_blackheader"  TargetType="{x:Type GridViewColumnHeader}" BasedOn="{StaticResource {x:Type GridViewColumnHeader}}">
            <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
            <Setter Property="TextBlock.Foreground" Value="White"/>
            <Setter Property="Background" Value="Black"/>
        </Style>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <xctk:InverseBoolConverter x:Key="NegBool"/>

    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation 
                        Storyboard.TargetName="myWindow"
                        Storyboard.TargetProperty="Opacity"
                        From="0.0" To="1.0" Duration="0:0:1"
                        AutoReverse="False"
                    />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>


    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="OptionsWidth" Width="700*"/>
            <ColumnDefinition x:Name="CinemaWidth" Width="200*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="WindowOptionsHeight" Height="30"/>
            <RowDefinition x:Name="OptionsHeight" Height="650"/>
            <RowDefinition x:Name="CinemaHeight" Height="100*"/>
        </Grid.RowDefinitions>


        <MediaElement x:Name="Cinema_MediaPlayer" Visibility="Hidden" Grid.ColumnSpan="3" Grid.RowSpan="3" Grid.Row="0" Grid.Column="0" LoadedBehavior="Manual" UnloadedBehavior="Manual" Volume="{Binding Value, ElementName=sl_volumecontrol}" MediaEnded="Cinema_MediaPlayer_MediaEnded"/>


        <Image x:Name="img_slideshow" Source="Resources/loginwindow.png" Grid.ColumnSpan="2" Grid.RowSpan="3" RenderTransformOrigin="0.5,0.5">
            <Image.OpacityMask>
                <ImageBrush ImageSource="Resources/logo_hq_mask.png" Stretch="Uniform"/>
            </Image.OpacityMask>
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <Canvas x:Name="Canvas_Custom_UI">
            <Canvas x:Name="Canvas_login" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0">
                <Image x:Name="img_loginwindow" Source="/Resources/loginwindow.png" Height="300" />
                <ListView x:Name="Cinema_Accountlist" BorderThickness="0" Canvas.Left="100" Canvas.Top="80" Width="280" Height="135" Style="{DynamicResource Style_lvacc}" SelectionMode="Multiple" BorderBrush="#FF5F5F5F" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ListView.OpacityMask>
                        <ImageBrush ImageSource="Resources/opacitymask.png"/>
                    </ListView.OpacityMask>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="280">
                                <GridViewColumnHeader Visibility="Collapsed"/>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <WrapPanel>
                                            <Image Source="{Binding Settings.Icon.Image}" Height="26"/>
                                            <TextBlock x:Name="Txt" Text="{Binding Nickname}" FontSize="14" FontWeight="Bold" Background="{x:Null}" VerticalAlignment="Center">
                                                <TextBlock.Foreground>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="Black" Offset="0"/>
                                                        <GradientStop Color="White" Offset="1"/>
                                                        <GradientStop Color="Black" Offset="0.979"/>
                                                    </LinearGradientBrush>
                                                </TextBlock.Foreground>
                                            </TextBlock>
                                        </WrapPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
                <StackPanel Orientation="Horizontal" Canvas.Left="100" Canvas.Top="220">
                    <Button x:Name="Cinema_Launchaccount" Height="30" Click="Cinema_Launchaccount_Click"  BorderThickness="0" BorderBrush="Black" >
                        <Grid>
                            <Border Background="Black" MinWidth="150">
                                <Label Grid.ColumnSpan="3" Grid.Column="1" Content="Launch" Foreground="#FFF9F9F9" HorizontalAlignment="Center" FontSize="12" Background="{x:Null}" BorderBrush="Black" FontWeight="Bold"/>
                            </Border>
                        </Grid>
                    </Button>
                    <!--
                    <Button x:Name="Settings" Width="100" Height="30" Margin="10,0,0,0" Click="Settings_Click" BorderThickness="0" BorderBrush="Black"  Background="#CCFFFFFF">
                        <Button.OpacityMask>
                            <ImageBrush ImageSource="Resources/opacitymask.png"/>
                        </Button.OpacityMask>
                        <Image Source="Resources/Icons/settings.png" />
                    </Button>
                    -->
                </StackPanel>
            </Canvas>
        </Canvas>
        <Grid Grid.Row="0" Grid.ColumnSpan="2" x:Name="WindowHeaderGrid">
            <Image Source="Resources/header_background.png" Opacity="0.9" Stretch="UniformToFill" RenderTransformOrigin="0.5,0.5" >
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image Source="Resources/header_dragonhead.png" HorizontalAlignment="Left"  RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Label x:Name="Title" Grid.Row="0" Content="Gw2 Launchbuddy 2.3" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Left"/>
        </Grid>

        <StackPanel Grid.Column="1" Grid.ColumnSpan="5" x:Name="WindowOptionsColum"  Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Background="#CC000000">
            <WrapPanel x:Name="VolumeControl" MouseLeave="WrapPanel_MouseLeave">
                <Button x:Name="bt_mute" Width="40"   BorderThickness="0" Style="{StaticResource WindowButton}" Click="bt_mute_Click" MouseEnter="bt_mute_MouseEnter" >
                    <Border Background="{StaticResource LightBackground}" Width="20" Height="25">
                        <Border.OpacityMask>
                            <ImageBrush x:Name="img_mutebutton" ImageSource="Resources/Icons/speaker_loud.png"/>
                        </Border.OpacityMask>
                    </Border>
                </Button>
                <Slider x:Name="sl_volumecontrol" Width="150" Orientation="Horizontal" Visibility="Collapsed" LargeChange="0.1" Maximum="1" ValueChanged="sl_volumecontrol_ValueChanged" SmallChange="0.05" Value="0.9"/>
            </WrapPanel>
            <Button x:Name="bt_ShowSettings" Width="30" Click="bt_ShowSettings_Click" Height="30" VerticalAlignment="Top" BorderThickness="0" Style="{StaticResource WindowButton}" >
                <Border Background="{StaticResource LightBackground}" Width="20" Height="20">
                    <Border.OpacityMask>
                        <ImageBrush ImageSource="Resources/Icons/settings.png"/>
                    </Border.OpacityMask>
                </Border>
            </Button>
            <Button x:Name="bt_cinema" Width="40" Click="bt_cinema_Click" BorderThickness="0" Style="{StaticResource WindowButton}" >
                <Border Background="{StaticResource LightBackground}" Width="20" Height="20">
                    <Border.OpacityMask>
                        <ImageBrush ImageSource="Resources/Icons/film.png"/>
                    </Border.OpacityMask>
                </Border>
            </Button>
            <Button x:Name="bt_minimize" Width="40" Click="bt_minimize_Click" BorderThickness="0" Style="{StaticResource WindowButton}" >
                <Border Background="{StaticResource LightBackground}" Width="20" Height="20">
                    <Border.OpacityMask>
                        <ImageBrush ImageSource="Resources/Icons/minimize.png"/>
                    </Border.OpacityMask>
                </Border>
            </Button>
            <Button x:Name="bt_close" Width="40"  Click="bt_close_Click" BorderThickness="0" Style="{StaticResource WindowButton}" >
                <Border Background="{StaticResource LightBackground}" Width="20" Height="20">
                    <Border.OpacityMask>
                        <ImageBrush ImageSource="Resources/Icons/close.png"/>
                    </Border.OpacityMask>
                </Border>
            </Button>
        </StackPanel>


        <Grid  x:Name="SettingsGrid" Grid.Row="1"  Grid.RowSpan="3" Grid.ColumnSpan="3" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid Margin="20,5" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="bt_launch" Grid.ColumnSpan="2" Style="{StaticResource LaunchButton}"  Click="bt_launch_Click" Grid.Row="0" Grid.Column="0" BorderThickness="0" BorderBrush="{x:Null}" Foreground="{x:Null}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="100*" MinWidth="375"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="Black" Grid.Column="1">
                            <Label Grid.ColumnSpan="3" Grid.Column="1" Content="Launch Guild Wars 2" Foreground="#FFF9F9F9" HorizontalAlignment="Center" FontSize="19" Background="{x:Null}" BorderBrush="Black" FontWeight="Bold"/>
                        </Border>
                        <Image Source="Resources/shortdragonhead.png" Stretch="UniformToFill" Grid.Column="0" Margin="0,0,-2,0"></Image>
                        <Image Source="Resources/shortdragonhead.png" Stretch="UniformToFill" Grid.Column="3" HorizontalAlignment="Right" RenderTransformOrigin="0.5,0.5" Margin="-2,0,0,0">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="-1"/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>
                </Button>
            </Grid>
            <TabControl x:Name="tab_options" Grid.Row="0" TabStripPlacement="Left" BorderBrush="White" Background="GhostWhite">
                <TabItem x:Name="tab_home" MouseEnter="tab_home_MouseEnter">
                    <TabItem.Header>
                        <StackPanel>
                            <Image Height="20" Source="Resources/Icons/home.png"/>
                            <Label FontSize="10" Margin="0,-5,0,-7">Home</Label>
                        </StackPanel>
                    </TabItem.Header>
                    <DockPanel>
                        <Grid Margin="0,-3,0,0" DockPanel.Dock="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8*"/>
                                <ColumnDefinition Width="619*"/>
                                <ColumnDefinition Width="159*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2"/>
                                <RowDefinition Height="80"/>
                            </Grid.RowDefinitions>

                            <!--
                            <Button x:Name="bt_quaggan"  Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Width="75" Height="75" Click="bt_quaggan_Click" Margin="0,26,0,4" Grid.RowSpan="2">
                                <Image Source="Resources/quaggan.png"/>
                            </Button>
                            -->


                            <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                                <Label x:Name="label" Content="Gw2 Client Details:" HorizontalAlignment="Left" Grid.ColumnSpan="2" Style="{StaticResource H1}" Width="152"/>
                                <Label x:Name="lab_version" Content="Build Version:" ToolTip="The current Guild Wars 2 build your system is using." />
                                <DockPanel>
                                    <Label x:Name="lab_path" Content="Install Path:" DockPanel.Dock="Left" Grid.Column="1" Grid.Row="1"/>
                                    <Button x:Name="bt_installpath" DockPanel.Dock="Left" ToolTip="Set your gamefolder path if it isn't &#x0a; determined correctly by launchbuddy" Content="Set" Click="bt_installpath_Click" Width="40" HorizontalAlignment="Left" VerticalAlignment="Center" />
                                </DockPanel>

                            </StackPanel>
                            <Grid Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" Width="142">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50*"/>
                                    <RowDefinition Height="50*"/>
                                </Grid.RowDefinitions>
                                <Image x:Name="bt_patreon" Source="Resources/patreon_button.png" Grid.Row="1" VerticalAlignment="Bottom" MouseDown="bt_patreon_Click"/>
                                <Image Source="Resources/donate.png"  VerticalAlignment="Top" Height="40" MouseDown="bt_donate_Click" />
                            </Grid>


                        </Grid>
                        <Separator Margin="3" DockPanel.Dock="Top"/>
                        <Label Name="lb_acccountinfo" Content="Accounts:" Style="{StaticResource H1}" DockPanel.Dock="Top"/>
                        <ListView x:Name="lv_accs" DataContext="{Binding Path=Account}" SelectionChanged="lv_accs_SelectionChanged" SelectionMode="Multiple">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel ToolTip="{Binding Path=Client.Status}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" LastChildFill="False" IsEnabled="{Binding Path=Settings.Loginfile.IsUpToDate}">
                                        <Label Height="32" Foreground="Green" Content="{Binding Path=Settings.AccountInformation.LastLogin}" DockPanel.Dock="Right"/>
                                        <Label Height="32" Visibility="{Binding Path=Settings.LoginfileOutdated, Converter={StaticResource BoolToVis}}" ToolTip="Loginfile is outdated" Foreground="Red" Content="UPDATE REQUIRED" DockPanel.Dock="Right"/>
                                        <Image Height="32" Source="{Binding Path=Settings.Icon.Image}" DockPanel.Dock="Left"/>
                                        <Image Height="32" Source="{Binding Path=Client.StatusToIcon}" DockPanel.Dock="Right"/>
                                        <Image Height="32" Source="Resources/Icons/settings.png" Visibility="{Binding Path=Settings.HasArguments, Converter={StaticResource BoolToVis}}" ToolTip="Uses Arguments" DockPanel.Dock="Right"/>
                                        <Image Height="32" Source="Resources/Icons/injection.png" Visibility="{Binding Path=Settings.HasDlls, Converter={StaticResource BoolToVis}}" ToolTip="Uses Injected Software" DockPanel.Dock="Right"/>
                                        <Image Height="32" Source="Resources/Icons/feature.png" Visibility="{Binding Path=Settings.HasAdvancedSettings, Converter={StaticResource BoolToVis}}" ToolTip="Uses Advanced Settings" DockPanel.Dock="Right"/>
                                        <Image Height="32" Source="Resources/Icons/account.png" Visibility="{Binding Path=Settings.HasLoginCredentials, Converter={StaticResource BoolToVis}}" ToolTip="Uses Autologin" DockPanel.Dock="Right"/>
                                        <Label Content="{Binding Path=Nickname}" BorderThickness="0" Margin="0" FontSize="18" FontWeight="Bold"/>
                                        <Image Height="32" Source="Resources/Icons/taco_black.png" x:Name="bt_launchtaco" Visibility="{Binding Path=Settings.TacoValid, Converter={StaticResource BoolToVis}}" ToolTip="Add TacO" DockPanel.Dock="Right" MouseDown="bt_launchtaco_MouseDown"/>
                                    </DockPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                    </DockPanel>
                </TabItem>

                <TabItem >
                    <TabItem.Header>
                        <StackPanel>
                            <Image Height="20" Source="Resources/Icons/accounts.png"/>
                            <Label FontSize="10" Margin="0,-5,0,-7">Account Settings</Label>
                        </StackPanel>
                    </TabItem.Header>
                    <DockPanel>
                        <DockPanel DockPanel.Dock="Left" MinWidth="120" Background="LightGray" LastChildFill="True">
                            <StackPanel DockPanel.Dock="Bottom">
                                <Button x:Name="bt_accadd" Content="Add"  Click="bt_accadd_Click" />
                                <StackPanel x:Name="sp_acclistbuttons"  IsEnabled="False">
                                    <Button x:Name="bt_accclone" Content="Clone" Click="bt_accclone_Click"   />
                                    <Button x:Name="bt_accrem" Content="Remove" Click="bt_accrem_Click" />
                                    <UniformGrid Height="20" Rows="1">
                                        <Button x:Name="bt_accsortup"  Content="↑"  Click="bt_accsortup_Click" DockPanel.Dock="Left"/>
                                        <Button x:Name="bt_accsortdown"  Content="↓" Click="bt_accsortdown_Click" DockPanel.Dock="Right"/>
                                    </UniformGrid>
                                    <Button x:Name="bt_accsave" Content="Save" Click="bt_accsave_Click" />
                                    <Button x:Name="bt_accload" Content="Load" Click="bt_accload_Click" Visibility="Collapsed"/>
                                </StackPanel>
                            </StackPanel>

                            <ListView x:Name="lv_accssettings" SelectionChanged="lv_accssettings_SelectionChanged">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Image Source="{Binding Path=Settings.Icon.Image}" VerticalAlignment="Center" MaxHeight="64" HorizontalAlignment="Center"/>
                                            <Label Content="{Binding Path=Nickname}" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#43000000" FontWeight="Bold" FontSize="14" Foreground="White">
                                                <Label.OpacityMask>
                                                    <ImageBrush ImageSource="Resources/acc_opacitymask.png"/>
                                                </Label.OpacityMask>
                                            </Label>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </DockPanel>

                        <DockPanel x:Name="gr_acceditor" IsEnabled="False">
                            <TextBox x:Name="tb_accnickname" Text="{Binding Path=Nickname}" DockPanel.Dock="Top" FontSize="20" FontWeight="Bold" KeyDown="tb_accnickname_KeyDown" Background="#FFF7F7F7"/>
                            <Separator  DockPanel.Dock="Top"/>
                            <ScrollViewer x:Name="sv_accsettings" Margin="2,2,0,2" VerticalScrollBarVisibility="Auto" DataContext="{Binding Path=Settings}" >
                                <ScrollViewer.Background>
                                    <ImageBrush ImageSource="{Binding Path=Icon.Image}" Opacity="0.03"/>
                                </ScrollViewer.Background>
                                <StackPanel>
                                    <Expander ToolTip="Set up Login Data for an automated Login" Style="{StaticResource Bordered}">
                                        <Expander.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="Resources/Icons/account.png" Height="22"/>
                                                <Label Style="{StaticResource H2}">Login Credentials</Label>
                                            </StackPanel>
                                        </Expander.Header>
                                        <DockPanel>
                                            <StackPanel>
                                                <DockPanel>
                                                    <Button DockPanel.Dock="Left" Name="bt_loginfile" Height="22" Width="120" Click="bt_loginfile_Click">Set Loginfile</Button>
                                                    <Label Foreground="Green" Content="Loginfile successfully configured" Visibility="{Binding Path=HasLoginCredentials, Converter={StaticResource BoolToVis}}" />
                                                </DockPanel>
                                                <Button DockPanel.Dock="Left" Name="bt_loginfileupdate" Visibility="{Binding Path=HasLoginCredentials, Converter={StaticResource BoolToVis}}" Height="22" Width="120" HorizontalAlignment="Left" Click="bt_loginfileupdate_Click" ToolTip="Manually repair your Loginfile if the automated Update did not work">Repair Loginfile</Button>
                                                <Expander DockPanel.Dock="Top" Margin="5,0,0,0" >
                                                    <Expander.Header>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Label Style="{StaticResource H3}">Optional: Add Backup information</Label>
                                                        </StackPanel>
                                                    </Expander.Header>
                                                    <DockPanel>
                                                        <StackPanel Orientation="Vertical" MaxWidth="300" MinWidth="200" DockPanel.Dock="Left">
                                                            <Label x:Name="lab_email" Content="Email:"  d:LayoutOverrides="Width" VerticalAlignment="Center" FontWeight="Bold"/>
                                                            <TextBox x:Name="tb_email" Height="23" MinWidth="150" LostKeyboardFocus="tb_email_LostKeyboardFocus" Text="{Binding Path=UI_Email}"/>
                                                            <Label x:Name="lab_passw" Content="Password:" HorizontalAlignment="Left"  VerticalAlignment="Center" IsEnabled="False" Height="26" Width="62" Grid.Row="2" Grid.Column="1" FontWeight="Bold" />
